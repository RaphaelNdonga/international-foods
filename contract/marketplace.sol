contract MarketPlace {
    address internal cUsdTokenAddress =
        0x874069Fa1Eb16D44d622F2e0Ca25eeA172369bC1;
    address internal nfftTokenAddress =
        0xFb1CdF69B09deF230B563cf29738d25C41c1B708;

    function nftTransfer(
        address owner,
        address recipient,
        uint256 tokenId,
        uint256 price
    ) public {
        sendERC20Token(owner, price);
        IERC721(nfftTokenAddress).transferFrom(owner, recipient, tokenId);
    }

    function isApproved(uint256 tokenId) public view returns (bool) {
        address approvedAddress = IERC721(nfftTokenAddress).getApproved(
            tokenId
        );
        if (approvedAddress == address(this)) {
            return true;
        }
        return false;
    }

    function sendERC20Token(address recipient, uint256 amount) public payable {
        IERC20Token(cUsdTokenAddress).transfer(recipient, amount);
    }
}
